      <script>
        function validate(event) {
            const pass = event.target.value;
            const reenter = document.getElementById('Passwords').value;
            const passwordPattern = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

            if (passwordPattern.test(pass)) {
                document.getElementById('errmsg').innerText = '';
            } else {
                document.getElementById('errmsg').innerText = "Password should contain 8 characters with uppercase, lowercase, number, and a special character";
            }

            if (pass == reenter) {
                document.getElementById('mmss').innerText = "OK";
            } else {
                document.getElementById('mmss').innerText = '';
            }
        }

        function signFunction() {
            const passwordInput = document.getElementById("Password").value;
            const confirmPass = document.getElementById("Passwords").value;
            const mspan = document.getElementById("errmsg");
            const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

            if (!passwordRegex.test(passwordInput)) {
                mspan.innerText = "Password does not meet the requirements.";
                return false;
            }

            if (passwordInput === confirmPass) {
                mspan.innerText = "";
                return true;
            } else {
                mspan.innerText = "Password does not match";
                return false;
            }
        }
    </script>

    

    

